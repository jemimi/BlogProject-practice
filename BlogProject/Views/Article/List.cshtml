@model IEnumerable<BlogProject.Models.Article>
@{
    ViewBag.Title = "List";
}

<h2>List Articles</h2>

<form action="/Articles/List" method="GET" >
    <input type="text" name="ArticleSearchKey"/>
    <input type="submit" value="Submit!" />
</form>

@foreach (var article in Model)
{
<div>
    <h3><a href="/Article/Show/@article.ArticleId">@article.ArticleTitle</a></h3>

    
    <p>@article.ArticleBody</p>
</div>

}
